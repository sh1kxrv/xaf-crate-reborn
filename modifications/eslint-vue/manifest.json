{
  "name": "Vue 3 ESLint",
  "id": "vue3-eslint-mod",
  "inject": {
    "package.json": {
      "scripts": {
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix",
        "build": "yarn lint && vite build"
      },
      "devDependencies": {
        "eslint": "latest",
        "eslint-plugin-vue": "latest",
        "@rushstack/eslint-patch": "latest",
        "@vue/eslint-config-prettier": "latest"
      }
    }
  },
  "compatibles": ["vue3-plate-lite", "vue3-plate", "monorepo-plate"]
}
